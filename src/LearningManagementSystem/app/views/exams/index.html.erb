<p id="notice"><%= notice %></p>

<h1>Exams</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Semester</th>
      <th>Exam name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.course.course_name %></td>
        <td><%= exam.course.semester %>
        <td><%= exam.exam_name %></td>
        <% if current_administrator %>
          <td><%= link_to 'Show', exam %></td>
          <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
          <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_administrator %>
  <%= link_to 'New Exam', new_exam_path %>
<% end %>
